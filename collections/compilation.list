<div class="comp-wrapper">
  <div class="comp-inner">
    {# Probably add in another item wrapper for better CSS control}
    <div class="comp-item-wrapper">
      {.repeated section items}
      <a href="/{customContent.reference}" class="comp-item">
        <div class="comp-item--badge"><img {customContent.topLeftImage|image-meta} data-comp-image></div>
        <squarespace:query collection="{customContent.reference}" limit="99">
          {.section collection}
          <h1 class="comp-item--title">{title}</h1>
          <img class="comp-item--image" {mainImage|image-meta} data-comp-image />
          <p class="comp-item--count" data-item-count="{itemCount}">{itemCount} Products</p>
          {.end}
        </squarespace:query>
      </a>
      {.end}
    </div>
  </div>
</div>